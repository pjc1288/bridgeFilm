html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Film The Bridge
        include partials/head.pug
    body
        h3 Register here

        section.form-login

          form.main-form(action='/auth/register' method='POST')

            label.form-label(for='name') Name
            input.form-input(type='text' id="name" name='name' placeholder='Your name here')

            label.form-label(for='email') Email
            input.form-input(type='email' id="email" name='email' placeholder='E-mail address here')

            label.form-label(for='password') Password
            input.form-input(type='password' id="password" name='password' placeholder='Password here')

            label.form-label(for='passwordConfirm') Confirm Password
            input.form-input(type='password' id="passwordConfirm" name='passwordConfirm' placeholder='Confirm your Password here')

            input.form-input.main-submit(type='submit' value='REGISTER')





